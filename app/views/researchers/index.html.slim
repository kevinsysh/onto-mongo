.container
  .row
    h1 Researchers
    - if @result.present?
      .row
        table.table
          thead
            tr
              th Name
              th Name in citations
          tbody
            - @result.each do |r|
              tr
                td = link_to r.name, r
                td = r.name_in_citations
          tfoot
            tr
              td
                = paginate @result
